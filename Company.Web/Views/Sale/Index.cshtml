@model IEnumerable<Company.Web.Models.SaleViewModel>

<br />
<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 header-text text-center">
                <h5 class="mb-10">
                    @if (Session["IsAdmin"] != null)
                    {
                        @Html.ActionLink("Users", "Index", "User");
                        <span>||</span>
                    }

                    @Html.ActionLink("Sales", "Index", "Sale") ||
                    @Html.ActionLink("Purchases", "Index", "Purchase")
                </h5>
            </div>
        </div>
    </div>
</section>

<br />
<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 header-text text-center">
                <h1 class="mb-10">Welcome @User.Identity.Name</h1>
            </div>
        </div>
    </div>
</section>
<!-- End Sample Area -->
<br />
<br />

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 header-text text-center">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                @if (Model != null && Model.Count() > 0)
                {
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NetAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VatApplied)
                            </th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.VatAmount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GrossAmout)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Date.ToString("dd/MM/yyyy")                                    
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    £ @Html.DisplayFor(modelItem => item.NetAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VatApplied)
                                </td>                                
                                <td>
                                    £ @Html.DisplayFor(modelItem => item.VatAmount)
                                </td>
                                <td>
                                    £ @Html.DisplayFor(modelItem => item.GrossAmout)
                                </td>
                            </tr>
                        }

                    </table>
                }
                else
                {
                    <div class="col-md-12 header-text text-center">
                        <h3 class="mb-10">No Sales record</h3>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- End Sample Area -->
